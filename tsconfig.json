{
  "compilerOptions": {  
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,    
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx","./src/locations.json"],
  "exclude": ["node_modules", "build", "dist", "tests", "src/**/*.js", "src/**/*.jsx"]
}
